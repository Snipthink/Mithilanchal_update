<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RECENT_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="layout.EventTab">
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/event_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include layout="@layout/parent_event_header_notificaion" />

        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/event_material">

            <RelativeLayout
                android:id="@+id/layout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/Sanskar_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include layout="@layout/parent_card_view" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/pooja_pray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Sanskar_header"
                    android:orientation="horizontal">

                    <include layout="@layout/parent_card_vieww" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/all_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pooja_pray"
                    android:orientation="horizontal">

                    <include layout="@layout/parent_card_viewww" />

                </LinearLayout>



            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>


    </RelativeLayout>


</FrameLayout>
